  "ui": {
    "theme": {
      "defaultTheme": "purple",
      "availableThemes": ["red", "blue", "green", "purple", "orange", "yellow", "cyan", "pink"]
    },
    "notifications": {
      "defaultDuration": 2500,
      "maxNotifications": 4
    },
    "debounceDelay": 250
  },
  "features": {
    "authentication": true,
    "cloudStorage": true,
    "attendance": true,
    "statistics": true,
    "sharing": true,
    "pwa": true
