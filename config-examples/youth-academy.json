{
  "app": {
    "name": "Youth Academy Tracker",
    "shortName": "YAT",
    "version": "4.0",
    "description": "Youth football academy match tracker",
    "author": "Youth Academy FC"
  },
  "team": {
    "defaultTeam1Name": "Academy U13",
    "defaultTeam2Name": "Opposition",
    "clubName": "Youth Football Academy",
    "season": "2025-2026",
    "ageGroup": "U13 Mixed"
  },
  "roster": {
    "defaultPlayers": [
      { "name": "Alex", "shirtNumber": 1 },
      { "name": "Bailey", "shirtNumber": 2 },
      { "name": "Charlie", "shirtNumber": 3 },
      { "name": "Drew", "shirtNumber": 4 },
      { "name": "Ellis", "shirtNumber": 5 },
      { "name": "Finley", "shirtNumber": 6 },
      { "name": "Harper", "shirtNumber": 7 },
      { "name": "Jordan", "shirtNumber": 8 },
      { "name": "Kai", "shirtNumber": 9 },
      { "name": "Logan", "shirtNumber": 10 }
    ],
    "maxPlayers": 30,
    "allowDuplicateNumbers": false,
    "autoSort": true
  },
  "match": {
    "defaultGameTime": 3000,
    "gameDurations": {
      "7v7_40min": 2400,
      "7v7_50min": 3000,
      "9v9_60min": 3600,
      "11v11_70min": 4200,
      "11v11_80min": 4800,
      "11v11_90min": 5400
    },
    "timerUpdateInterval": 100,
    "autoSaveInterval": 5000
